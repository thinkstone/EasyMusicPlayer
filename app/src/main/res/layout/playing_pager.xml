<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fream.com.example.my.musicplayer.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音乐"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/back_to_last"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/playing_main_back"
            android:background="#00000000"
            android:layout_alignParentLeft="true"/>
    </android.support.v7.widget.Toolbar>

    <ImageButton
        android:id="@+id/playing_background"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/playing_main_background"
         />
    <ProgressBar
        android:id="@+id/pb_progressbar_main_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/playing_background"
        style="?android:attr/progressBarStyleHorizontal" />

    <LinearLayout
        android:id="@+id/linearlayout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">
        <ImageButton
            android:id="@+id/list_song"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:src="@mipmap/show_list_icon0"
            />
        <ImageButton
            android:id="@+id/last_song"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:src="@mipmap/ic_last"
            />
        <ImageButton
            android:id="@+id/play_pause_song"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#00000000"
            android:layout_marginLeft="10dp"            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_play"/>
        <ImageButton
            android:id="@+id/next_song"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#00000000"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_next"/>
        <ImageButton
            android:id="@+id/play_mode_song"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#00000000"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/suiji"
         />
    </LinearLayout>
</RelativeLayout>
